<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Введите Принимаемое количество в декалитрах и нажмите Добавить"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tvAction"/>


        <include android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 layout="@layout/rec_prih_position"
                 android:id="@+id/inclRecPrihContent"
        />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Принимаемое колво:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etQtyAccepted"/>
    </LinearLayout>

    <Button
            android:text="Добавить"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"/>
    <Button
            android:text="Очистить количество"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnClear"/>

</LinearLayout>
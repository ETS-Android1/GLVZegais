<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="Приходы"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonIncome"/>
    <Button
            android:text="Сборка товара по заданию"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonMove"/>
    <Button
            android:text="Сборка товара произвольная"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonWriteoff"/>
    <Button
            android:text="Проверка марок"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonCheckMark"/>
    <Button
            android:text="Поиск марок"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonFindMark"/>
    <Button
            android:text="Инвентаризация"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonInv"/>
    <Button
            android:text="Фото"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonPhoto"/>
    <Button
            android:text="К выбору магазина"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonBack"/>

    <Button
        android:id="@+id/buttonLoadData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузить данные" />
</LinearLayout>
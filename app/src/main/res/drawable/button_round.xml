<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#F74147" />
            <gradient android:angle="-90" android:endColor="#FFD917" android:startColor="#FFB217" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#F74147" />
            <solid android:color="#FFB217" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#F74147" />
            <gradient android:angle="-90" android:endColor="#FFB217" android:startColor="#FFD917" />
        </shape>
    </item>
</selector>